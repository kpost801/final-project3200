<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Surveys</h1>

<div id="surveys">
<table class="table">
  <% @surveys.each do |survey| %>
    <%= render survey %>
    <tr>
      <td>
      <%= link_to "Edit", edit_survey_path(survey), class: "btn btn-info" %>
      <%= link_to "Delete", survey, class: "btn btn-danger" %>
      <%= link_to "Design", new_survey_path(survey), class: "btn btn-warning" %>
      <%= link_to "Take Survey", new_survey_path(survey), class: "btn btn-secondary" %>
      </td>
    </tr>
    <p>
      <%= link_to "Show this survey", survey,class: "btn btn-info " %>
    </p>
  <% end %>
  </table>
</div>


<%= link_to "New survey", new_survey_path,class: "btn btn-primary " %>
</div>

